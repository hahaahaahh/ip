<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <module name="SuppressionFilter">
        <property name="file" value="${config_loc}/suppressions.xml"/>
        <property name="optional" value="true"/>
    </module>

    <module name="TreeWalker">
        <module name="MethodName"/>
        <module name="PackageName"/>
        <module name="TypeName"/> <module name="LocalVariableName"/>

        <module name="AvoidStarImport"/> <module name="UnusedImports"/>

        <module name="LeftCurly"/> <module name="RightCurly"/>
        <module name="WhitespaceAround"/> <module name="EmptyBlock"/>
        <module name="NeedBraces"/> <module name="MissingSwitchDefault"/> </module>
</module>